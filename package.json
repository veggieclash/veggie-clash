{
  "name": "veggie-clash",
  "version": "1.0.0",
  "description": "A family-friendly arcade shooter where vegetables battle it out in the garden",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "validate:assets": "node scripts/validate-assets.ts",
    "smoke:test": "npm run build && echo 'Build successful'"
  },
  "keywords": [
    "game",
    "phaser",
    "typescript",
    "arcade",
    "shooter",
    "vegetables",
    "browser-game"
  ],
  "author": "Veggie Clash Team",
  "license": "MIT",
  "dependencies": {
    "phaser": "^3.70.0",
    "tone": "^14.7.77"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/ui": "^0.34.0",
    "eslint": "^8.50.0",
    "typescript": "^5.2.0",
    "vite": "^4.4.0",
    "vitest": "^0.34.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/veggie-clash.git"
  },
  "homepage": "https://username.github.io/veggie-clash/",
  "bugs": {
    "url": "https://github.com/username/veggie-clash/issues"
  }
}
